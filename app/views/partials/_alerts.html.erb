<% if notice %>
    <p class="alert alert-success">
        <%= notice %><button class="close" data-dismiss="alert" >&times;</button>
    </p>
<% end %>

<% if alert %>
    <p class="alert alert-danger">
        <%= alert %><button class="close" data-dismiss="alert" >&times;</button>
    </p>
<% end %>
